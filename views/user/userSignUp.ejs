<div class="container py-4 py-lg-5 my-4">
    <div class="row" style="display: flex; justify-content: center;">
      <div class="col-md-6 pt-4 mt-3 mt-md-0">
        <div class="card border-0 shadow rounded-5 bg-faded-info" >
          <div class="card-body">
        <h2 class="h4 mb-3 d-flex justify-content-center text-light">SIGN UP</h2>
        <form class="needs-validation" action="/otp" method="post">
          <div class="row gx-4 gy-3">
            <div class="col-sm-12">
              <label class="form-label text-light" for="reg-fn">Your Name</label>
              <input class="form-control" name="name" type="text" required id="reg-fn">
              <div class="invalid-feedback">Please enter your name!</div>
            </div>
            <!-- <div class="col-sm-6">
              <label class="form-label" for="reg-fn">Your Image</label>
              <input class="form-control" name="image" type="file" required id="reg-fn">
              <div class="invalid-feedback">Please upload your image!</div>
            </div> -->
            <div class="col-sm-6">
              <label class="form-label text-light" for="reg-email">E-mail Address</label>
              <input class="form-control" name="email" type="email" required id="reg-email">
              <div class="invalid-feedback">Please enter valid email address!</div>
            </div>
            <div class="col-sm-6">
              <label class="form-label text-light" for="reg-phone">Phone Number</label>
              <input class="form-control" name="phone" type="number" required id="reg-phone">
              <div class="invalid-feedback">Please enter your phone number!</div>
            </div>
            <div class="col-sm-6">
              <label class="form-label text-light" for="reg-password">Password</label>
              <input class="form-control" name="password" type="password" required id="reg-password">
              <div class="invalid-feedback">Please enter password!</div>
            </div>
            <div class="col-sm-6">
              <label class="form-label text-light" for="reg-password-confirm">Confirm Password</label>
              <input class="form-control" name="passwords" type="password" required id="reg-password-confirm">
              <div class="invalid-feedback">Passwords do not match!</div>
            </div>
            <% if(status=="true"){ %>
                <p id="ban" class="text-center text-warning">This Email Already Used</p>
            <% } %>
            <hr class="mt-4 ">
            <div class="col-12 text-end d-flex justify-content-center" style="flex-direction: column;">
              <button class="btn btn-primary" type="submit"><i class="ci-add-user me-2 ms-n1"></i>SIGN UP</button>
              <p class="small fw-bold mt-4 pt-1 mb-0 d-flex justify-content-center">Already have an account? &nbsp&nbsp<a href="/login" class="ci-user link-warning"> SIGN IN</a></p>
            </div>
          </div>
        
